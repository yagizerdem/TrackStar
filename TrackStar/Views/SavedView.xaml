<UserControl x:Class="TrackStar.Views.SavedView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrackStar.Views"
             mc:Ignorable="d" 
             xmlns:converters="clr-namespace:TrackStar.Converters"
             xmlns:viewCommon="clr-namespace:TrackStar.Views.Common"
             xmlns:dto="clr-namespace:TrackStar.Models.DTO"
             xmlns:entity="clr-namespace:TrackStar.Models.Entity"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:BooleanToVisibileCollapsedConverter x:Key="BooleanToVisibileCollapsedConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:NullToVisibilityReversedConverter x:Key="NullToVisibilityReversedConverter"/>
        <converters:MultiBoolToVisibilityConverter x:Key="MultiBoolToVisibilityConverter"/>

    </UserControl.Resources>


    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <!--laoder-->
        <viewCommon:LoadingPanel Grid.ColumnSpan="10"
                         Grid.RowSpan="10"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"
                         Panel.ZIndex="100"
                         Background="#80000000"
                         Visibility="{Binding IsLoading , 
                           Converter={StaticResource BooleanToVisibileCollapsedConverter}}"/>



        <!--selected movei details card-->
        <Grid Background="#CC000000"
      Panel.ZIndex="100"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch"
      Grid.ColumnSpan="10"
      Grid.RowSpan="10"
      Visibility="{Binding SelectedMovie, 
          Converter={StaticResource NullToVisibilityConverter}}">


            <!-- Center the card -->
            <Grid HorizontalAlignment="Center"
                  VerticalAlignment="Center">
                <Border Width="600"
                MaxHeight="700"
                Padding="20"
                Background="White"
                CornerRadius="10"
                BorderBrush="#DDD"
                BorderThickness="1"
                Effect="{DynamicResource ShadowEffect}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Title -->
                            <TextBlock Text="{Binding SelectedMovie.Title}"
                               FontSize="20"
                               FontWeight="Bold"
                               TextWrapping="Wrap" />

                            <TextBlock Text="{Binding SelectedMovie.Year}"
                               Foreground="Gray"
                               FontStyle="Italic"
                               Margin="0,0,0,10" />

                            <!-- Poster -->
                            <Image Source="{Binding SelectedMovie.Poster}"
                           Height="300"
                           Stretch="Uniform"
                           Margin="0,0,0,10" />

                            <!-- Plot -->
                            <TextBlock Text="Plot"
                               FontWeight="Bold"
                               Margin="0,5,0,2"/>
                            <TextBlock Text="{Binding SelectedMovie.Plot}"
                               TextWrapping="Wrap" />

                            <!-- Additional details -->
                            <Separator Margin="0,10,0,10"/>
                            <UniformGrid Columns="2" Rows="1" Margin="0,0,0,10">
                                <TextBlock Text="Genre:" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedMovie.Genre}" />

                                <TextBlock Text="Director:" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedMovie.Director}" />

                                <TextBlock Text="Actors:" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedMovie.Actors}" />

                                <TextBlock Text="Runtime:" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedMovie.Runtime}" />

                                <TextBlock Text="Language:" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedMovie.Language}" />

                                <TextBlock Text="Awards:" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedMovie.Awards}" />
                            </UniformGrid>

                            <!-- Ratings -->
                            <TextBlock Text="Ratings"
                               FontWeight="Bold"
                               Margin="0,5,0,2"/>
                            <ItemsControl ItemsSource="{Binding SelectedMovie.Ratings}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" >
                                            <TextBlock Text="{Binding Source}" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Value}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Button Content="Cancel"
                                    Style="{StaticResource BtnDanger}"
                                    Command="{Binding CloseMoveiDetailsCommand}"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>

        <!-- Selected series details card -->
        <Grid Background="#CC000000"
      Panel.ZIndex="100"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch"
      Grid.ColumnSpan="10"
      Grid.RowSpan="10"
      Visibility="{Binding SelectedSeries, Converter={StaticResource NullToVisibilityConverter}}">

            <!-- Center the card -->
            <Grid HorizontalAlignment="Center"
          VerticalAlignment="Center">
                <Border Width="600"
                MaxHeight="700"
                Padding="20"
                Background="White"
                CornerRadius="10"
                BorderBrush="#DDD"
                BorderThickness="1"
                >
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Title -->
                            <TextBlock Text="{Binding SelectedSeries.Title}"
                               FontSize="20"
                               FontWeight="Bold"
                               TextWrapping="Wrap" />

                            <TextBlock Text="{Binding SelectedSeries.Year}"
                               Foreground="Gray"
                               FontStyle="Italic"
                               Margin="0,0,0,10" />

                            <!-- Poster -->
                            <Image Source="{Binding SelectedSeries.Poster}"
                           Height="300"
                           Stretch="Uniform"
                           Margin="0,0,0,10" />

                            <!-- Plot -->
                            <TextBlock Text="Plot"
                               FontWeight="Bold"
                               Margin="0,5,0,2"/>
                            <TextBlock Text="{Binding SelectedSeries.Plot}"
                               TextWrapping="Wrap" />

                            <!-- Additional details -->
                            <Separator Margin="0,10,0,10"/>
                            <UniformGrid Columns="2" Margin="0,0,0,10">
                                <TextBlock Text="Genre:" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedSeries.Genre}" />

                                <TextBlock Text="Director:" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedSeries.Director}" />

                                <TextBlock Text="Writer:" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedSeries.Writer}" />

                                <TextBlock Text="Actors:" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedSeries.Actors}" />

                                <TextBlock Text="Runtime:" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedSeries.Runtime}" />

                                <TextBlock Text="Released:" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedSeries.Released}" />

                                <TextBlock Text="Language:" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedSeries.Language}" />

                                <TextBlock Text="Country:" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedSeries.Country}" />

                                <TextBlock Text="Awards:" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedSeries.Awards}" />

                                <TextBlock Text="Total Seasons:" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedSeries.TotalSeasons}" />

                                <TextBlock Text="IMDb Rating:" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedSeries.ImdbRating}" />

                                <TextBlock Text="IMDb Votes:" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedSeries.ImdbVotes}" />

                                <TextBlock Text="Metascore:" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedSeries.Metascore}" />
                            </UniformGrid>

                            <!-- Ratings -->
                            <TextBlock Text="Ratings"
                               FontWeight="Bold"
                               Margin="0,5,0,2"/>
                            <ItemsControl ItemsSource="{Binding SelectedSeries.Ratings}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Source}" FontWeight="Bold" Margin="0,0,5,0"/>
                                            <TextBlock Text="{Binding Value}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Button Content="Cancel"
                            Style="{StaticResource BtnDanger}"
                            Command="{Binding CloseSeriesDetailsCommand}"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>



        <!--filter text box and string search strategy-->
        <Grid Grid.Row="0" Margin="0 20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBox Style="{StaticResource BootstrapTextBox}" 
                     Grid.Column="1"
                     Text="{Binding Query , UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

            <StackPanel Orientation="Horizontal"
                        Grid.Column="2"
                        Margin="10 0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Exact Match"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <CheckBox Style="{StaticResource ModernCheckBox1}"
                                Margin="10 0"
                                IsChecked="{Binding IsExactMatch, UpdateSourceTrigger=PropertyChanged , Mode=TwoWay}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Substring Match"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <CheckBox Style="{StaticResource ModernCheckBox1}"
                              Margin="10 0"
                              IsChecked="{Binding IsSubstringMatch, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                </StackPanel>
                
            </StackPanel>
            
        </Grid>


        <!--filter by options-->
        <Grid Grid.Row="1">
            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Stretch"
                        Margin="0 10">

                <TextBlock Text="Filter By"
                          FontSize="18"
                          FontWeight="Bold"
                          Foreground="White"
                          VerticalAlignment="Center"
                           Margin="10 20"/>

                <StackPanel Orientation="Horizontal"
                            Margin="10 0">
                    <!--filter by title-->
                    <StackPanel Orientation="Horizontal"
                                Margin="10 0">
                        <TextBlock Text="Title"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                        <CheckBox Style="{StaticResource ModernCheckBox1}" 
                                  IsChecked="{Binding FilterByTitle}"/>
                    </StackPanel>
                    
                    <!--filter by Director-->
                    <StackPanel Orientation="Horizontal"
                                Margin="10 0">
                        <TextBlock Text="Director"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                        <CheckBox Style="{StaticResource ModernCheckBox1}" 
                                   IsChecked="{Binding FilterByDirctor}"/>
                    </StackPanel>

                    <!--filter by Writer-->
                    <StackPanel Orientation="Horizontal"
                                Margin="10 0">
                        <TextBlock Text="Writer"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                        <CheckBox Style="{StaticResource ModernCheckBox1}"
                                    IsChecked="{Binding FilterByWriter}"/>
                    </StackPanel>

                    <!--filter by Actors-->
                    <StackPanel Orientation="Horizontal"
                                Margin="10 0">
                        <TextBlock Text="Actors"
                     FontSize="12"
                     FontWeight="Bold"
                     Foreground="White"
                     VerticalAlignment="Center"/>
                        <CheckBox Style="{StaticResource ModernCheckBox1}" 
                                   IsChecked="{Binding FilterByActors}"/>
                    </StackPanel>


                    <!--filter by Country-->
                    <StackPanel Orientation="Horizontal"
                                Margin="10 0">
                        <TextBlock Text="Country"
                     FontSize="12"
                     FontWeight="Bold"
                     Foreground="White"
                     VerticalAlignment="Center"/>
                        <CheckBox Style="{StaticResource ModernCheckBox1}" 
                                  IsChecked="{Binding FilterByCountry}"/>
                    </StackPanel>


                </StackPanel>
             

                
            </StackPanel>
        </Grid>


        <!--sort by options-->
        <Grid  Grid.Row="2">
            <StackPanel>
                <TextBlock
                    Margin="10 20"
                    Text="Sort By"
                    FontWeight="Bold"
                    FontSize="18"
                    Foreground="White"/>

                <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Horizontal"
                    Margin="10 0">
                            <TextBlock Text="Ascending"
                       FontSize="12"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"/>
                            <CheckBox Style="{StaticResource ModernCheckBox1}" 
                      IsChecked="{Binding SortAscending}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                Margin="10 0">
                            <TextBlock Text="Descending"
                   FontSize="12"
                   FontWeight="Bold"
                   Foreground="White"
                   VerticalAlignment="Center"/>
                            <CheckBox Style="{StaticResource ModernCheckBox1}" 
                  IsChecked="{Binding SortDescending}"/>
                        </StackPanel>

                        <!--sor by--> 
                        <Grid Margin="10 0">
                            <!-- ComboBox -->
                            <ComboBox Width="200"
              Foreground="White"
              Style="{StaticResource ModernComboBox}"
              ItemsSource="{Binding SortByOptions}"
              SelectedItem="{Binding SortBy, Mode=TwoWay}"/>

                            <!-- Placeholder text -->
                            <TextBlock Text="Select Sort By"
               FontSize="12"
               FontWeight="Bold"
               Foreground="Gray"
               VerticalAlignment="Center"
               Margin="8,0,0,0"
               IsHitTestVisible="False"
               Visibility="{Binding SortBy, Converter={StaticResource NullToVisibilityReversedConverter}}"/>
                        </Grid>

                        <!--sort then by-->
                    <Grid Margin="10 0">
                        <!-- ComboBox -->
                        <ComboBox Width="200"
                                Foreground="White"
                                Style="{StaticResource ModernComboBox}"
                                ItemsSource="{Binding SortThenByOptions}"
                                SelectedItem="{Binding SortThenBy, Mode=TwoWay}"/>

                        <!-- Placeholder text -->
                        <TextBlock Text="Select Sort Then By"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   Foreground="Gray"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"
                                   IsHitTestVisible="False"
                                   Visibility="{Binding SortThenBy, Converter={StaticResource NullToVisibilityReversedConverter}}"/>
                    </Grid>



                </StackPanel>

            </StackPanel>
        </Grid>
        
        <!--view mode-->
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock
                    Margin="10 20"
                    Text="View Mode"
                    FontWeight="Bold"
                    FontSize="18"
                    Foreground="White"/>

            <StackPanel Orientation="Horizontal"
                        Margin="10 0"
                        Grid.Row="1">
            
                <!--list view-->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="List View"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <CheckBox 
                              Style="{StaticResource ModernCheckBox1}"
                              Margin="10 0"
                              IsChecked="{Binding IsListView, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/> 
                </StackPanel>
                
                <!--gird view-->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Grid View"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <CheckBox 
                              Style="{StaticResource ModernCheckBox1}"
                              Margin="10 0"
                              IsChecked="{Binding IsGridView, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                </StackPanel>

            </StackPanel>
        </Grid>


        <Grid Grid.Row="4">
            <Grid.RowDefinitions>
                <RowDefinition  Height="Auto" />
                <RowDefinition  Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Film / Tv Shows" 
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="16"
                       Margin="10 "/>

            <StackPanel 
                Grid.Row="1"
                Orientation="Horizontal">

                <CheckBox Style="{StaticResource ModernCheckBox1}"
                          IsChecked="{Binding IsFilms, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                          Margin="10 0"
                          Content="Movies"/>

                <TextBlock Text="Films"
                    FontSize="12"
                    FontWeight="Bold"
                    Foreground="White"
                    VerticalAlignment="Center"
                    Visibility="{Binding IsFilms, 
                         Converter={StaticResource BooleanToVisibileCollapsedConverter}}"/>

                <TextBlock Text="Tv Shows"
                    FontSize="12"
                    FontWeight="Bold"
                    Foreground="White"
                    VerticalAlignment="Center"
                    Visibility="{Binding IsSeries, 
                         Converter={StaticResource BooleanToVisibileCollapsedConverter}}"/>

            </StackPanel>

        </Grid>
        
        <!--movie list view-->
        <Grid Grid.Row="5">
            <Grid.Visibility>
                <MultiBinding Converter="{StaticResource MultiBoolToVisibilityConverter}" ConverterParameter="AND">
                    <Binding Path="IsListView"/>
                    <Binding Path="IsFilms"/>
                </MultiBinding>
            </Grid.Visibility>
            <ListView ItemsSource="{Binding SavedMovies}"
              Margin="10"
              Background="Transparent"
              BorderThickness="0"
              ScrollViewer.VerticalScrollBarVisibility="Auto"
              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
              ScrollViewer.CanContentScroll="False">

                <ListView.ItemTemplate>
                    <DataTemplate DataType="{x:Type entity:MovieEntity}">
                        <Border CornerRadius="8"
                        Padding="12"
                        Background="White"
                        BorderBrush="#DEE2E6"
                        BorderThickness="1"
                        Effect="{DynamicResource CardShadow}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Image Grid.Column="0"
                               Width="90" 
                               Height="135"
                               Stretch="UniformToFill"
                               Source="{Binding Poster}"
                               SnapsToDevicePixels="True"/>

                                <!-- Main Content Column -->
                                <Grid Grid.Column="2" VerticalAlignment="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                       Text="{Binding Title}"
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="#212529"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,4"/>

                                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                                        <TextBlock Text="{Binding Year}" Foreground="#6C757D"/>
                                        <TextBlock Text="•" Margin="4,0" Foreground="#ADB5BD"/>
                                        <TextBlock Text="{Binding Genre}" Foreground="#6C757D"/>
                                        <TextBlock Text="•" Margin="4,0" Foreground="#ADB5BD"/>
                                        <TextBlock Text="{Binding Runtime}" Foreground="#6C757D"/>
                                    </StackPanel>

                                    <ScrollViewer Grid.Row="2" 
                                          VerticalScrollBarVisibility="Disabled"
                                          HorizontalScrollBarVisibility="Disabled"
                                          Margin="0,4,0,0">
                                        <TextBlock Text="{Binding Plot}"
                                           TextWrapping="Wrap"
                                           Foreground="#495057"
                                           MaxHeight="48"
                                           TextTrimming="WordEllipsis"/>
                                    </ScrollViewer>

                                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,6,0,0">
                                        <TextBlock Text="IMDb:" Foreground="#6C757D"/>
                                        <TextBlock Text="{Binding ImdbRating}" FontWeight="SemiBold" Margin="2,0,8,0"/>
                                        <TextBlock Text="Votes:" Foreground="#6C757D"/>
                                        <TextBlock Text="{Binding ImdbVotes}" Margin="2,0,0,0"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Buttons Column -->
                                <StackPanel Grid.Column="3" 
                                    VerticalAlignment="Center"
                                    MinWidth="110"
                                    Margin="12,0,0,0">
                                    <Button Style="{StaticResource BtnInfo}"
                                    Content="Details"
                                    Command="{Binding DataContext.ShowMovieDetails,
                                              RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}" 
                                    Margin="0,0,0,8"/>
                                    <ToggleButton Content="★ Favourites"
                                          IsChecked="{Binding IsStarred, Mode=TwoWay}"
                                          Style="{StaticResource BtnToggleSuccess}"
                                          Margin="0,0,0,8"/>
                                    <ToggleButton Content="Watchlist"
                                           Command="{Binding DataContext.AddMovieToWatchlist, 
                                                RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                          IsChecked="{Binding IsInWatchlist, Mode=TwoWay}"
                                          Style="{StaticResource BtnTogglePrimary}"
                                          Margin="0,0,0,8"/>
                                    <ToggleButton 
                                            Content="Remove Selected"
                                            Command="{Binding DataContext.DelteMovieFromSavedCommand, 
                                            RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Style="{StaticResource BtnToggleDanger}"
                                            CommandParameter="{Binding}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0,0,0,12"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <ContentPresenter/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.Resources>
                    <Style TargetType="ScrollBar">
                        <Setter Property="Width" Value="8"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ScrollBar">
                                    <Grid Background="Transparent" SnapsToDevicePixels="True">
                                        <Track x:Name="PART_Track" IsDirectionReversed="True">
                                            <Track.DecreaseRepeatButton>
                                                <RepeatButton Style="{StaticResource SliderTrackDecreaseButtonStyle}" />
                                            </Track.DecreaseRepeatButton>
                                            <Track.IncreaseRepeatButton>
                                                <RepeatButton Style="{StaticResource SliderTrackIncreaseButtonStyle}" />
                                            </Track.IncreaseRepeatButton>
                                            <Track.Thumb>
                                                <Thumb Style="{StaticResource ModernSliderThumb}"/>
                                            </Track.Thumb>
                                        </Track>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.Resources>
            </ListView>
        </Grid>


        <!--movie grid view-->
        <Grid Grid.Row="5">
            <Grid.Visibility>
                <MultiBinding Converter="{StaticResource MultiBoolToVisibilityConverter}" ConverterParameter="AND">
                    <Binding Path="IsGridView"/>
                    <Binding Path="IsFilms"/>
                </MultiBinding>
            </Grid.Visibility>
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  Padding="10"
                          Style="{StaticResource ModernScrollViewerVertical}">
                <ItemsControl ItemsSource="{Binding SavedMovies}"
                  Background="Transparent">
                    <!-- ItemsPanel: WrapPanel for horizontal flow -->
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type entity:MovieEntity}">
                            <Border CornerRadius="8"
                        Padding="12"
                        Background="White"
                        BorderBrush="#DEE2E6"
                        BorderThickness="1"
                        Effect="{DynamicResource CardShadow}"
                        Width="400"  
                            Margin="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Poster Image -->
                                    <Image Grid.Column="0"
                               Width="90" 
                               Height="135"
                               Stretch="UniformToFill"
                               Source="{Binding Poster}"
                               SnapsToDevicePixels="True"/>

                                    <!-- Main Content -->
                                    <Grid Grid.Column="2" VerticalAlignment="Center">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0"
                                       Text="{Binding Title}"
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="#212529"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,4"/>

                                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                                            <TextBlock Text="{Binding Year}" Foreground="#6C757D"/>
                                            <TextBlock Text="•" Margin="4,0" Foreground="#ADB5BD"/>
                                            <TextBlock Text="{Binding Genre}" Foreground="#6C757D"/>
                                            <TextBlock Text="•" Margin="4,0" Foreground="#ADB5BD"/>
                                            <TextBlock Text="{Binding Runtime}" Foreground="#6C757D"/>
                                        </StackPanel>

                                        <ScrollViewer Grid.Row="2" 
                                          VerticalScrollBarVisibility="Disabled"
                                          HorizontalScrollBarVisibility="Disabled"
                                          Margin="0,4,0,0">
                                            <TextBlock Text="{Binding Plot}"
                                           TextWrapping="Wrap"
                                           Foreground="#495057"
                                           MaxHeight="48"
                                           TextTrimming="WordEllipsis"/>
                                        </ScrollViewer>

                                        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,6,0,0">
                                            <TextBlock Text="IMDb:" Foreground="#6C757D"/>
                                            <TextBlock Text="{Binding ImdbRating}" FontWeight="SemiBold" Margin="2,0,8,0"/>
                                            <TextBlock Text="Votes:" Foreground="#6C757D"/>
                                            <TextBlock Text="{Binding ImdbVotes}" Margin="2,0,0,0"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Buttons Column -->
                                    <StackPanel Grid.Column="3" 
                                    VerticalAlignment="Center"
                                    MinWidth="110"
                                    Margin="12,0,0,0">
                                        <Button Style="{StaticResource BtnInfo}"
                                    Content="Details"
                                    Command="{Binding DataContext.ShowMovieDetails,
