                                    Content="Details"
                                    Command="{Binding DataContext.ShowSeriesDetails,
                                              RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}" 
                                    Margin="0,0,0,8"/>
