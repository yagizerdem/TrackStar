                                    <!-- Buttons Column -->
                                    <StackPanel Grid.Column="3" 
                                VerticalAlignment="Center"
                                MinWidth="110"
                                Margin="12,0,0,0">
                                        <Button Style="{StaticResource BtnInfo}"
                                Content="Details"
                                Command="{Binding DataContext.ShowSeriesDetails,
                                          RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}" 
                                Margin="0,0,0,8"/>
                                        <ToggleButton Content="★ Favourite"
                                      IsChecked="{Binding IsStarred, Mode=TwoWay}"
                                      Style="{StaticResource BtnToggleSuccess}"
                                      Margin="0,0,0,8"/>
                                        <ToggleButton Content="Watchlist"
                                        Command="{Binding DataContext.AddSeriesToWatchlist, 
                                            RelativeSource={RelativeSource AncestorType=UserControl}}"
