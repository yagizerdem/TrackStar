                                            <TextBlock Text="{Binding ImdbRating}" FontWeight="SemiBold" Margin="2,0,8,0"/>
                                            <TextBlock Text="Votes:" Foreground="#6C757D"/>
                                            <TextBlock Text="{Binding ImdbVotes}" Margin="2,0,0,0"/>
                                        </StackPanel>
